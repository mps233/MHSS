{
  "name": "movie-request-site",
  "version": "1.0.0",
  "description": "自助求片网站",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"npm run browser-sync\"",
    "browser-sync": "sleep 3 && browser-sync start --proxy localhost:3000 --files 'public/**/*'"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
